<div class="container">

<div class="row">

 <h2> Add User </h2>

 <div class="col-md-2"> </div>

 <div class="col-md-8">

<br/> <br/>

<form method="post" action="/addUser">
  <div class="form-group">
    <label for="firstname">First Name</label>
    <input type="text" class="form-control" id="firstname" placeholder="Enter Your First Name" name="firstname">
  </div>

   <div class="form-group">
    <label for="lastname">Last Name</label>
    <input type="text" class="form-control" id="lastname" placeholder="Enter Your Second Name" name="lstname">
   </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" name="email">
  </div>
  
  <div class="form-group">
    <label for="profession">Profession</label>
    <input type="text" class="form-control" id="profession" placeholder="Enter Your Profession" name="profession">
   </div>
  
  <button type="submit" class="btn btn-primary">Add User</button>
</form>

 </div>

 <div class="col-md-2"></div>

</div>

<hr>

<div class="row">

     <h2> User Table </h2>

     <div class="col-md-2"></div>

     <div class="col-md-8">


       <table class="table table-hover">
  <thead>
    
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Profession</th>
      <th>Actions</th>

  </thead>
  <tbody>

  {{#each persons}}
  

    <tr>
      
      <td> {{this.id}} </td>
      <td> {{this.firstname}} </td>
      <td> {{this.lstname}} </td>
      <td> {{this.email}} </td>
      <td> {{this.profession}} </td>
      <td>

        <a href="/edit/{{this.id}}"> <button class="btn btn-primary"> Edit </button> </a>

        <a href="/deleteUser/{{this.id}}"> <button class="btn btn-primary"> Delete </button> </a>

         </td>
    </tr>

    {{/each}}

  </tbody>
</table>

     </div>

     <div class="col-md-2"></div>

</div>

</div>

